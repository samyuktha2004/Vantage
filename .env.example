# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# Database Connection String (from Supabase Project Settings > Database > URI)
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres

# Session Configuration — generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_session_secret_here

# App URL — used in guest invitation links (no trailing slash)
APP_URL=http://localhost:5000

# ─── TBO Hotel API (B2B Holidays) ────────────────────────────────────────
# See docs/TBO_API_SETUP.md for full setup instructions
TBO_HOTEL_URL=http://api.tbotechnology.in/TBOHolidays_HotelAPI
TBO_HOTEL_USERNAME=your_hotel_username_here
TBO_HOTEL_PASSWORD=your_hotel_password_here

# ─── TBO Air API (B2C/GDS) ───────────────────────────────────────────────
# Use RC_TBOAIR_URL value from your Postman environment file
TBO_AIR_URL=https://api.tbotech.com
TBO_AIR_CLIENT_ID=your_air_client_id_here
TBO_AIR_PASSWORD=your_air_password_here
TBO_AIR_SERVER_IP=127.0.0.1
